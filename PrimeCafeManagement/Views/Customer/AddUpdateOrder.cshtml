@using PrimeCafeManagement.Models;
@model Order;

<div class="row d-flex my-2">

	@* MEAL CARD 1 STARTS *@

	<div class="col-md-3">
		<form action="/Customer/AddUpdateOrder" method="post" enctype="multipart/form-data">
			<input type="hidden" asp-for="Id" />
			<div class="mb-3">
				<label class="form-label">User Name</label>
				<select class="form-select form-label" asp-for="UserId" asp-items="ViewBag.Users">
					<option>--Select User--</option>
				</select>
			</div>
			<div class="card" style="width:100%; height:300px;">
				<input type="hidden" name="Title" value="Today Meal" />
				<input type="hidden" name="Price" Value="250" />
				<img src="~/image/meal.jpg" alt="Meal Photo" style="width:100%; height:180px;" />
				<div class="card-body text-center">
					<h5 class="card-title">Today Meal</h5>
					<h6 class="card-title">Price Rs. 250</h6>
					<div class="text-center">
						<button class="btn btn-primary" type="submit">Add Order</button>
					</div>
				</div>
			</div>
		</form>
	</div>

	@* MEAL CARD 2 STARTS *@

	<div class="col-md-3">
		<form action="/Customer/AddUpdateOrder" method="post" enctype="multipart/form-data">
			<input type="hidden" asp-for="Id" />
			<div class="mb-3">
				<label class="form-label">User Name</label>
				<select class="form-select form-label" asp-for="UserId" asp-items="ViewBag.Users">
					<option>--Select User--</option>
				</select>
			</div>

			<div class="card" style="width:100%; height:300px;">
				<input type="hidden" name="Title" value="Rice" />
				<input type="hidden" name="Price" Value="150" />

				<img src="~/image/rice.jpg" alt="Meal Photo" style="width:100%; height:180px;" />
				<div class="card-body text-center">
					<h5 class="card-title">Rice</h5>
					<h6 class="card-title">Price Rs. 150</h6>
					<div class="text-center">
						<button class="btn btn-primary" type="submit">Add Order</button>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>






