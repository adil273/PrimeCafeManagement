@using PrimeCafeManagement.Models;
@model Order;
<div class="row">
	<div class="col-md-3 my-2"> 
 		<form action="/Customer/AddUpdateOrder" method="post" enctype="multipart/form-data"> 
			<input type="hidden" asp-for="Id" /> 
			<div class="card" style="width:100%; height:300px;"> 
 				<input type="hidden" name="Title" value="Chik" /> 
 				<input type="hidden" name="Price" Value="" /> 
 				<img src="~/image/chicken.jpg" alt="Chicken Karahi Photo" style="width:100%; height:180px;" />
 				<div class="card-body text-center"> 
 					<h5 class="card-title">Chicken</h5> 
 					<h6 class="card-title">Price Rs. 300</h6>
 					<div class="text-center"> 
 						<button class="btn btn-primary" type="submit">Add Order</button> 
 					</div> 
 				</div> 
 			</div> 
 		</form> 
 	</div>
</div>








